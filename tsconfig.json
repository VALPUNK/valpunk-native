{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "types/*": ["./types/*"],
      "constants/*": ["./constants/*"],
      "components/*": ["./src/*"]
    },
    // "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./build/dist",
    "target": "es6",
    "module": "es6",
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    // "lib": ["dom", "es2015", "es2016"],
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    // "strict": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    // "noUnusedLocals": true,

    "noImplicitUseStrict": true,
    // "moduleResolution": "node",
    "rootDirs": ["./src/"],
    "removeComments": false,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "strictNullChecks": false,
    "skipLibCheck": true,
    // "importHelpers": true,
    // "forceConsistentCasingInFileNames": true,
    // "suppressImplicitAnyIndexErrors": true,
    // "noImplicitUseStrict": true,
    // "allowJs": false,
    // "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules",
    "storybook",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/**/*.toDelete.tsx",
    "src/**/*.toDelete.ts"
  ]
}
